<view class="container">
  <!-- 广告轮播 -->
  <swiper 
    class="swiper-advert"
    autoplay="{{ true }}"
    interval="2000"
    circular="{{ true }}">
    <block wx:for="{{ advert }}" wx:key="index">
      <swiper-item>
        <image src="{{item}}" mode="widthFix"></image>
      </swiper-item>
    </block>
  </swiper>

  <!-- 菜单 -->
  <view class="menu">
    <block wx:for="{{ menus }}" wx:key="{{ index }}">
      <view bindtap="goTo({{ item.url }})">
        <image src="{{ item.imgUrl }}"></image>
        <text>{{ item.title }}</text>
      </view>
    </block>
  </view>

  <!-- 商品列表 -->
  <view class="product-list">
    <!-- 新品首发 -->
    <view class="pl-title" wx:if="{{ haveTitle }}">{{ items.news.title }} <text>more</text></view>
    <view class="pl-news">
      <block wx:for="{{ items.news.products }}" wx:key="{{ index }}">
        <view class="products">
          <image src="{{ item.img }}"></image>
          <text>{{ item.productName }}</text>
          <text>库存：{{ item.productStock }}</text>
          <view class="products-price">
            <text>￥ {{ item.productPrice }}</text>
            <text>{{ item.productDiscount }}</text>
          </view>
          <view class="pur-oper">
            <wux-cell title="" hover-class="none" >
              <wux-input-number 
                wux-class="border: none"
                wux-add-class="win-add-icon"
                wux-input-class="win-input"
                shape="circle" 
                color="light" 
                slot="footer"
                disabled="{{ false }}" />
            </wux-cell>
          </view>
        </view>
      </block>
    </view>
  

  <!-- 促销商品 -->
    <view class="pl-title">{{ items.promotion.title }} <text>more</text></view>
    <view class="pl-promotion">
      <block wx:for="{{ items.promotion.products }}" wx:key="{{ index }}">
        <view class="products">
          <image src="{{ item.img }}"></image>
          <text>{{ item.productName }}</text>
          <text>库存：{{ item.productStock }}</text>
          <view class="products-price">
            <text>￥ {{ item.productPrice }}</text>
            <text>{{ item.productDiscount }}</text>
          </view>
          <view class="pur-oper">
            <wux-cell title="" hover-class="none" >
              <wux-input-number 
                wux-class="border: none"
                wux-add-class="win-add-icon"
                wux-input-class="win-input"
                shape="circle" 
                color="light" 
                slot="footer"
                disabled="{{ false }}" />
            </wux-cell>
          </view>
        </view>
      </block>
    </view>
  

  <!-- 最新优惠 -->
    <view class="pl-title">{{ items.discount.title }} <text>more</text></view>
    <view class="pl-discount">
      <block wx:for="{{ items.discount.products }}" wx:key="{{ index }}">
        <view class="products">
          <image src="{{ item.img }}"></image>
          <text>{{ item.productName }}</text>
          <text>库存：{{ item.productStock }}</text>
          <view class="products-price">
            <text>￥ {{ item.productPrice }}</text>
            <text>{{ item.productDiscount }}</text>
          </view>
          <view class="pur-oper">
            <wux-cell title="" hover-class="none" >
              <wux-input-number 
                wux-class="border: none"
                wux-add-class="win-add-icon"
                wux-input-class="win-input"
                shape="circle" 
                color="light" 
                slot="footer"
                disabled="{{ false }}" />
            </wux-cell>
          </view>
        </view>
      </block>
    </view>
  </view>

  <!-- 二维码、分类等工具栏 -->
  <view class="tools">
    <text class="iconfont icon-scan-line"></text>
    <text class="iconfont icon-liebiao"></text>
    <view>
      <text class="iconfont icon-search"></text>
      <text>搜索你的心仪产品</text>
    </view>
  </view>


</view>