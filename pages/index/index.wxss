

/* 轮播图 */
.swiper-advert swiper-item, .swiper-advert{
  height: 750rpx;
  background: #000;
}

.swiper-advert image {
  width: 100%;
  height: 100%;
}

/* 菜单导航 */
.menu {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  margin-bottom: 50rpx;
}

.menu > view {
  flex: 1;
  height: 200rpx;
  padding-top: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #fff;
  font-size: 28rpx;
}

.menu > view > image {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 20rpx;
}

/* 商品列表 */
.product-list  {
  background: #fff;
}

.pl-news,.pl-promotion,.pl-discount {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
}

.pl-title {
  width: 100%;
  text-align: center;
  color: rgb(3, 150, 255);
  line-height: 100rpx;
  font-size: 36rpx;
  font-weight: bold;
  position: relative;
  border-bottom: 2rpx solid #eee;
}

.pl-title text {
  position: absolute;
  color: rgb(153, 153, 153);
  font-weight: 100;
  right: 50rpx;
}

.products {
  width: 347rpx;
  height: 600rpx;
  padding: 15rpx;
  display: flex;
  flex-direction: column;
}

.products {
  border-bottom: 2rpx solid #eee;
}

.products:nth-child(odd) {
  border-right: 2rpx solid #eee;
}

.products > image {
  width: 340rpx;
  height: 340rpx;
}

.products text:nth-child(2) {
  font-size: 32rpx;
  line-height: 60rpx;
  color: #222;
}

.products text:nth-child(3) {
  color: rgb(153, 153, 153);
  font-size: 24rpx;
  line-height: 40rpx;
}

.products-price text:nth-child(1) {
  color: rgb(245, 166, 35);
  font-size: 40rpx;
  line-height: 70rpx;
  width: auto;
}

.products-price text:nth-child(2) {
  color: rgb(125, 198, 108);
  display: inline-block;
  font-size: 20rpx;
  background: rgb(240, 249, 235);
  padding:0 10rpx;
  line-height: 40rpx;
  vertical-align: top;
}

.pur-oper {
  height: 60rpx;
}



/* 悬浮 */
.tools {
  position: fixed;
  /* background: rgba(0,0,0,0.3); */
  top: 30rpx;
  height: 100rpx;
  width: 100%;
  line-height: 100rpx;
  /* display: flex;
  flex-direction: row; */
}

.tools > text {
  width: 60rpx;
  font-size: 60rpx;
  padding: 5rpx;
  color: #aaa;
  background: #fff;
  border-radius: 50%;
  margin-left: 19rpx;
}

.tools > view {
  padding-left: 19rpx;
  margin-left: 19rpx;
  height: 70rpx;
  line-height: 70rpx;
  width: 500rpx;
  background: rgba(255, 255, 255, 0.9);
  position: absolute;
  left: 177rpx;
  top: 15rpx;
  border-radius: 50rpx;
  font-size: 28rpx;
  color: #aaa;
  /* vertical-align: middle; */
  display: flex;
  flex-direction: row;
  align-items: center;
}

.tools > view .iconfont {
  font-size: 50rpx;
  margin-right: 19rpx;
}

.tools > view text:nth-child(2) {
  display: inline-block;
  height: 50rpx;
  line-height: 50rpx;
  
}