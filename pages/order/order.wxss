.title-bar {
  background: #fff;
  height: 98rpx;
  line-height: 98rpx;
  border-bottom: 2rpx solid #eee;
  text-align: center;
  position: relative;
  color: #000;
}
.title-bar text:not(:last-child) {
  font-size: 28rpx;
  position: absolute;
}
.title-bar text:nth-child(1) {
  left: 20rpx;
  color: rgb(3, 150, 255);
}
.title-bar text:nth-child(2) {
  left: 130rpx;
  color: rgb(3, 150, 255);
}
.title-bar text:last-child {
  font-size: 36rpx;
}
/* 搜索框 */
.search-bar {
  border-color: #fff;
}
/* 筛选 */
.order-status {
  display: flex;
  flex-direction: row;
  height: 80rpx;
  background: #fff;
  font-size: 28rpx;
}

.order-state {
  height: 75rpx;
  border-bottom: solid 5rpx #eee;
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.order-status .active {
  color: rgb(3, 150, 255);
  border-bottom: 5rpx solid rgb(3, 150, 255);
}

/* 订单 */
.order-list > view{
  background: #fff;
  padding: 0 20rpx;
}
.order-list > view:not(:last-child) {
  margin-bottom: 20rpx;
}
.order-no {
  height: 80rpx;
  line-height: 80rpx;
  color: #000;
  font-size: 32rpx;
}
.order-no text:nth-child(2){
  float: right;
  color: rgb(126, 211, 33);
}

.order-num,.order-time,.order-amount {
  height: 40rpx;
  line-height: 40rpx;
  color: #8e8e8e;
}

.order-btn {
  width: 100%;
  height: 98rpx;
  line-height: 98rpx;
  border-top: 2rpx solid #eee; 
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
}

.order-btn button {
  margin:0 0 0 20rpx; 
  height: 60rpx;
  width: 150rpx;
  font-size: 24rpx;
  border-color: rgb(3, 150, 255);
  background: rgb(3, 150, 255);
  color: #fff;
  padding-left: 0;
  padding-right: 0;
}

.order-btn .cancel {
  background: #efefef;
  border-color: #ccc;
  color: #999;
}

/* 条形码弹窗 */
.dialog-slot {
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 550rpx;
  height: 200rpx;
  padding: 0 25rpx;
}
.dialog-slot > canvas {
    width: 550rpx;
    height: 100rpx;
    
}
.dialog-order-no {
  height: 50rpx;
}
.dialog-order-no text {
  height: 50rpx;
  line-height: 50rpx;
  text-align: justify;
}
.dialog-order-no text::after {
  width: 100%;
  display: inline-block;
  content: '';
}